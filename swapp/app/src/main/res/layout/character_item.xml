<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:layout_margin="16dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@drawable/ic_princess_leia"
                android:id="@+id/iv_character"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/iv_character"
                app:layout_constraintStart_toEndOf="@+id/iv_character"
                android:layout_marginStart="16dp"
                android:textStyle="bold" android:textSize="24sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_height" app:layout_constraintStart_toStartOf="@+id/tv_name"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_name"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/iv_character" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/tv_mass"
                app:layout_constraintHorizontal_chainStyle="spread" android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_character"/>
        <TextView
                android:text="Mass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mass"
                app:layout_constraintStart_toEndOf="@+id/tv_height"
                app:layout_constraintTop_toTopOf="@+id/tv_height"
                app:layout_constraintBottom_toBottomOf="@+id/tv_height" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp" app:layout_constraintHorizontal_bias="0.5" android:layout_marginEnd="16dp"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_question"
                android:id="@+id/tv_gender"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_name" app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        />
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@drawable/ic_star_outline"
                android:id="@+id/tv_favorite" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>