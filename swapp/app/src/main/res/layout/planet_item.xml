<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cl_planet" android:paddingBottom="16dp">

        <ImageView
                android:id="@+id/iv_planet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_death"/>

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_planet"
                app:layout_constraintTop_toTopOf="@+id/iv_planet"
                app:layout_constraintBottom_toBottomOf="@+id/iv_planet"/>
        <TextView
                android:text="Terrain:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_terrain"
                app:layout_constraintStart_toStartOf="@+id/tv_climate" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_climate"
        />
        <TextView
                android:text="Surface Water: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_water"
                app:layout_constraintStart_toStartOf="@+id/tv_population" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_population"/>
        <TextView
                android:text="Gravity:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_gravity"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_water" app:layout_constraintStart_toStartOf="@+id/tv_water"
        />
        <TextView
                android:text="Population:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_population"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_planet"
                app:layout_constraintStart_toStartOf="@+id/iv_planet"/>
        <TextView
                android:text="Climate:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_climate"
                app:layout_constraintStart_toStartOf="@+id/tv_gravity" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_gravity"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_climate_value"
                app:layout_constraintTop_toTopOf="@+id/tv_climate"
                app:layout_constraintStart_toEndOf="@+id/tv_climate" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_population_value"
                app:layout_constraintTop_toTopOf="@+id/tv_population"
                app:layout_constraintStart_toEndOf="@+id/tv_population" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="211dp"
                android:layout_height="wrap_content" android:id="@+id/tv_gravity_value"
                app:layout_constraintTop_toTopOf="@+id/tv_gravity"
                app:layout_constraintStart_toEndOf="@+id/tv_gravity" android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_water_value"
                app:layout_constraintTop_toTopOf="@+id/tv_water"
                app:layout_constraintStart_toEndOf="@+id/tv_water" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_terrain_value"
                app:layout_constraintTop_toTopOf="@+id/tv_terrain"
                app:layout_constraintStart_toEndOf="@+id/tv_terrain" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>