<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:layout_margin="16dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cl_species" android:paddingBottom="16dp">

        <ImageView
                android:id="@+id/iv_species"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_yoda"/>

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_species"
                app:layout_constraintTop_toTopOf="@+id/iv_species"
                app:layout_constraintBottom_toBottomOf="@+id/iv_species"/>
        <TextView
                android:text="Skin Color:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_terrain"
                app:layout_constraintStart_toStartOf="@+id/tv_climate" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_climate"
        />
        <TextView
                android:text="Designation:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_water"
                app:layout_constraintStart_toStartOf="@+id/tv_population" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_population"/>
        <TextView
                android:text="Average Lifespan:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_lifespan"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_water" app:layout_constraintStart_toStartOf="@+id/tv_water"
        />
        <TextView
                android:text="Classification:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_population"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_species"
                app:layout_constraintStart_toStartOf="@+id/iv_species"/>
        <TextView
                android:text="Eye Color:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_climate"
                app:layout_constraintStart_toStartOf="@+id/tv_height"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_height"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_eye_color_value"
                app:layout_constraintTop_toTopOf="@+id/tv_climate"
                app:layout_constraintStart_toEndOf="@+id/tv_climate" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_classification_value"
                app:layout_constraintTop_toTopOf="@+id/tv_population"
                app:layout_constraintStart_toEndOf="@+id/tv_population" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_lifespan_value"
                app:layout_constraintTop_toTopOf="@+id/tv_lifespan"
                app:layout_constraintStart_toEndOf="@+id/tv_lifespan" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_designation_value"
                app:layout_constraintTop_toTopOf="@+id/tv_water"
                app:layout_constraintStart_toEndOf="@+id/tv_water" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_skin_color_value"
                app:layout_constraintTop_toTopOf="@+id/tv_terrain"
                app:layout_constraintStart_toEndOf="@+id/tv_terrain" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Hair Color:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hair_color" app:layout_constraintStart_toStartOf="@+id/tv_terrain"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_terrain"/>
        <TextView
                android:text="Language:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_language" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_hair_color" app:layout_constraintStart_toStartOf="@+id/tv_hair_color"
        />
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hair_color_value" app:layout_constraintStart_toEndOf="@+id/tv_hair_color"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_hair_color" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_language_value"
                app:layout_constraintTop_toTopOf="@+id/tv_language"
                app:layout_constraintStart_toEndOf="@+id/tv_language" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Average Height:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_height" app:layout_constraintStart_toStartOf="@+id/tv_lifespan"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_lifespan"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_height_value"
                app:layout_constraintTop_toTopOf="@+id/tv_height" app:layout_constraintStart_toEndOf="@+id/tv_height"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>